# KODOSUMI Specialist Agents - Deployment Configuration
# =====================================================
# Environment variables for each specialist agent when deployed independently

# =========================================================================
# COMMON VARIABLES (Used by all specialists)
# =========================================================================

# Blockfrost API Configuration
BLOCKFROST_API_URL=https://cardano-preprod.blockfrost.io/api
BLOCKFROST_API_KEY=<your_blockfrost_api_key>

# KODOSUMI Registry (for agent discovery and DID registration)
KODOSUMI_REGISTRY_URL=http://kodosumi-registry:8080
KODOSUMI_REGISTRY_PORT=8080

# Logging
LOG_LEVEL=INFO

# =========================================================================
# SERVICE PORTS
# =========================================================================

# BlockScanner Service
BLOCK_SCANNER_PORT=8001

# StakeAnalyzer Service
STAKE_ANALYZER_PORT=8002

# VoteDoctor Service
VOTE_DOCTOR_PORT=8003

# MempoolSniffer Service
MEMPOOL_SNIFFER_PORT=8004

# ReplayDetector Service
REPLAY_DETECTOR_PORT=8005

# =========================================================================
# OPTIONAL: Custom DID Prefixes
# =========================================================================
# If you want to customize the DID namespace, set these:

# DID_NETWORK=masumi
# DID_NAMESPACE=son
# DID_ENVIRONMENT=prod

# Then DIDs will be auto-generated as:
# - did:masumi:block_scanner_01
# - did:masumi:stake_analyzer_01
# - did:masumi:vote_doctor_01
# - did:masumi:mempool_sniffer_01
# - did:masumi:replay_detector_01

# =========================================================================
# OPTIONAL: Database/Cache Configuration (for production)
# =========================================================================

# Redis cache for replay pattern detection
# REDIS_URL=redis://redis-cache:6379

# PostgreSQL for metrics and audit logs
# DATABASE_URL=postgresql://user:pass@db:5432/son_metrics

# =========================================================================
# OPTIONAL: Kubernetes/Orchestration
# =========================================================================

# Enable Kubernetes service discovery
# KUBERNETES_ENABLED=true
# KUBERNETES_NAMESPACE=son-agents

# Service mesh (Istio, Linkerd, etc.)
# SERVICE_MESH_ENABLED=true
# SERVICE_MESH_NAME=linkerd
